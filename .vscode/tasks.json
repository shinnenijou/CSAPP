{
	"version": "2.0.0",
	"presentation": {
		"panel": "shared",
		"showReuseMessage": false
	},
	"tasks": [
		{// mkdir
			"label": "mkdir build",
			"command": "mkdir",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"-p",
				"build"
			],
			"presentation": {
				"reveal": "never",
				"clear": true
			}
		},
		{// cmake
			"label": "cmake",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				".."
			],
			"dependsOn": "mkdir build"
		},
		{// make
			"label": "make",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "make",
			"args": [],
			"dependsOn": "cmake"
		},
		{// Run
			"label": "Run",
			"options": {
				"cwd": "${workspaceFolder}/bin"
			},
			"command": "main",
			"dependsOn": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{// Cmake: build
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"main"
			],
			"problemMatcher": [],
			"detail": "CMake template build task",
			"dependsOn": "mkdir build"
		}
	]
}